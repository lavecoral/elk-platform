<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.lavecoral.elk.auth.repository.SubjectRepository">
    <resultMap id="Subject" type="me.lavecoral.elk.auth.model.Subject">
        <!-- 指定主键用id, column为表列名， property 为类属性 -->
        <id property="id" column="id"/>
        <!-- 普通属性用 result -->
        <result property="name" column="name"/>
        <result property="password" column="password"/>
        <result property="enable" column="enable" javaType="Boolean"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="findByName" resultMap="Subject" parameterType="String">
        select *
        from subject
        where name = #{name}
    </select>

    <insert id="insert" parameterType="me.lavecoral.elk.auth.model.Subject"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO subject (name, password, enable, created_at, updated_at)
            VALUE (#{name}, #{password}, #{enable}, #{createdAt} #{updatedAt})
    </insert>

    <update id="update" parameterType="me.lavecoral.elk.auth.model.Subject">
        UPDATE subject
        <set>
            <if test="password != null">password = #{password}</if>
            <if test="enable != null">enable = #{enable}</if>
            <if test="updated_at != null">updated_at = #{updatedAt}</if>
        </set>
        WHERE id=#{id}
    </update>

    <select id="findAll" resultMap="Subject">
        SELECT * FROM subject;
    </select>
</mapper>
